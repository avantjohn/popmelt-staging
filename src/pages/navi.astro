---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<script>
    import { gsap } from 'gsap';

    // Select all navigation icons
    const naviIcons = document.querySelectorAll('.navi-content-icon');

    // Add hover animations for each icon
    naviIcons.forEach(icon => {
        const bg = icon.querySelector('.navi-content-icon-bg');

        // Create hover animation
        icon.addEventListener('mouseenter', () => {
            gsap.to(bg, {
                scale: 1.2,
                duration: 0.3,
                ease: 'power2.out'
            });
        });

        // Create hover out animation
        icon.addEventListener('mouseleave', () => {
            gsap.to(bg, {
                scale: 1,
                duration: 0.3,
                ease: 'power2.out'
            });
        });
    });
</script>

<Layout>
    <div class="page-wrap">
        <div class="page-content">
            <div class="page-content-fg">
                <h1>studios</h1>
            </div>
            <div class="page-content-bg">
                <div class="background-image">
                    <img src="https://picsum.photos/1920/1080" alt="background">
                </div>
            </div>
            <div class="navi">
                <div class="navi-ui">
                </div>
                <div class="navi-content">
                    <div class="navi-content-icon">
                        <div class="navi-content-icon-bg"></div>
                        <Icon name="general/chevron-left" />
                    </div>
                    <div class="navi-content-item">
                        <div class="navi-content-image">
                            <img src="https://picsum.photos/200/300" alt="image">
                        </div>
                        <div class="navi-content-text">
                            <div class="navi-content-text-category">
                                <div>category</div>
                            </div>
                            <div class="navi-content-text-title">
                                <div>studios</div>
                            </div>
                        </div>
                    </div>
                    <div class="navi-content-icon">
                        <div class="navi-content-icon-bg"></div>
                        <Icon name="general/chevron-right" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    body {
        background-color: #000;
        color: #fff;
    }   

    .page-wrap {
        width: 100%;
        height: 100svh;
    }

    .page-content-fg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100svh;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
    }

    .page-content-fg h1 {
        font-size: 10rem;
        font-weight: 900;
        line-height: 1;
    }
    
    .page-content-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100svh;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .background-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .navi {
        color: #000;
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 20rem;
        background-color: oklch(from #fff .95 c h / .95);
        border: 1px solid oklch(from #fff .95 c h / 1);
        margin: 0 0 2rem 0;
        border-radius: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        box-shadow: 0 20px 60px 0 rgba(0, 0, 0, .33);
        z-index: 1;
    }

    .navi-content {
        width: 100%;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 1.25rem;
        padding: .75rem 1.25rem;
    }

    .navi-content-icon {
        width: 1.5rem;
        height: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        cursor: pointer;
    }

    .navi-content-icon-bg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 2rem;
        height: 2rem;
        background-color: oklch(from #fff .95 c h / .75);
        border: 1px solid oklch(from #000 .85 c h / .5);
        border-radius: 50%;
        z-index: -1;
    }

    .navi-content-item {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        flex-grow: 1;
        gap: .75rem;
    }

    .navi-content-image {
        aspect-ratio: 4/3;
        height: 2.5rem;
        border-radius: .5rem;
        overflow: hidden;
    }

    .navi-content-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .navi-content-text {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        gap: .25rem;
    }

    .navi-content-text-category {
        font-size: .75rem;
        color: oklch(from #000 l c h / .5);
    }

    .navi-content-text-title {
        font-size: 1rem;
    }

    [data-icon] {
        font-size: .6rem;
        color: oklch(from #000 l c h / .75);
    }

</style>